@article{Tobin2018power,
	Abstract = {The electricity sector is currently considered mainly on the emission side of the climate change equation. In order to limit climate warming to below 2 $\,^{\circ}$C, or even 1.5 $\,^{\circ}$C, it must undergo a rapid transition towards carbon neutral production by the mid-century. Simultaneously, electricity generating technologies will be vulnerable to climate change. Here, we assess the impacts of climate change on wind, solar photovoltaic, hydro and thermoelectric power generation in Europe using a consistent modelling approach across the different technologies. We compare the impacts for different global warming scenarios: +1.5 $\,^{\circ}$C, +2 $\,^{\circ}$C and +3 $\,^{\circ}$C. Results show that climate change has negative impacts on electricity production in most countries and for most technologies. Such impacts remain limited for a 1.5 $\,^{\circ}$C warming, and roughly double for a 3 $\,^{\circ}$C warming. Impacts are relatively limited for solar photovoltaic and wind power potential which may reduce up to 10%, while hydropower and thermoelectric generation may decrease by up to 20%. Generally, impacts are more severe in southern Europe than in northern Europe, inducing inequity between EU countries. We show that a higher share of renewables could reduce the vulnerability of power generation to climate change, although the variability of wind and solar PV production remains a significant challenge.},
	Author = {Tobin, I. and Greuell, W. and Jerez, S. and Ludwig, F. and Vautard, R. and van Vliet, M. T. H. and Br{\'e}on, F.-M.},
	Date-Added = {2018-10-12 16:30:43 +0200},
