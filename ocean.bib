	Issn = {2212-0947},
	Journal = {Weather and Climate Extremes},
	Keywords = {Mortality, Health system, Cold weather, Weather regimes},
	Pages = {100218},
	Title = {Winter pressures on the {UK} health system dominated by the {Greenland Blocking} weather regime},
