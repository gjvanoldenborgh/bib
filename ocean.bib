	Keywords = {Extremes, Evaluation, Event attribution, CAM5.1, MIROC5, HadGEM3-A-N216},
	Pages = {35 - 43},
	Title = {Comparing regional precipitation and temperature extremes in climate model and reanalysis products},
	Volume = {13},
