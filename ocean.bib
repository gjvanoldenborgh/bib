	Journal = {J. Geophys. Res. Atmos.},
	Keywords = {index flood, precipitation extremes, Rhine basin},
	Number = {D15},
	Pages = {D15107},
	Title = {A nonstationary index flood model for precipitation extremes in transient regional climate model simulations},
	Volume = {114},
