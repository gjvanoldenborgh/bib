	Journal = {Earth's Future},
	Keywords = {detection and attribution, extreme event, framing questions, Type I and Type II errors, null hypothesis, logic of research questions},
	Number = {3},
	Pages = {311-325},
	Title = {Climate Change Attribution: When Is It Appropriate to Accept New Methods?},
	Volume = {6},
	Year = {2018},
	Bdsk-Url-1 = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2017EF000665},
